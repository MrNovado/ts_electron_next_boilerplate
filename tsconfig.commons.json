{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./constants/@types"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["application/*"],
      "@const/*": ["constants/*"],
      "@component/*": ["renderer/components/*"],
      "@redux/*": ["redux_store/*"],
      "@page/*": ["renderer/pages/*"],
      "@feature/*": ["renderer/features/*"]
    }
  },
  "exclude": [
    "node_modules",
    "compiled",
    "distribution",
    "renderer/.next"
  ]
}
